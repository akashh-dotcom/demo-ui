# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?appName=Cluster0

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:4201

# Email Configuration
EMAIL_ENABLED=true
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@example.com
EMAIL_PASS=your-app-password

# =============================================================================
# PDF Converter Configuration (PDFtoXMLUsingExcel)
# =============================================================================
# Directory containing the PDF converter (relative to backend folder)
PDF_CONVERTER_DIR=./PDFtoXMLUsingExcel

# Python executable - use 'python3' for Linux/AWS, or full path for Windows venv
# For local Windows development with venv, use: ./PDFtoXMLUsingExcel/venv/Scripts/python.exe
# For AWS/Linux, use: python3
PDF_CONVERTER_PYTHON=python3

# Main PDF converter script name (just filename, not full path)
PDF_CONVERTER_SCRIPT=pdf_to_unified_xml.py

# =============================================================================
# EPUB/RittDoc Converter Configuration (RittDocConverter)
# =============================================================================
# Python executable for RittDoc converter
# For local Windows development with venv, use: ./RittDocConverter/venv/Scripts/python.exe
# For AWS/Linux, use: python3
CONVERTER_PYTHON=python3

# Full path to the integrated_pipeline.py script (relative to backend folder)
CONVERTER_SCRIPT_PATH=./RittDocConverter/integrated_pipeline.py
